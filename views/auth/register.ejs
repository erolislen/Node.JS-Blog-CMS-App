<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../_partials/user/head') %>
  </head>
  <body>
    <!-- Responsive navbar-->
    <%- include('../_partials/user/navbar') %>
    <!-- Page header with logo and tagline-->
    <%- include('../_partials/user/header') %>
    <!-- Page content-->
    <div class="container">
      <div class="row">
        <!-- Blog entries-->
        <div class="col-lg-12 mb-4 ">
          <!-- Nested row for non-featured blog posts-->
          <div class="row">
           
            <div class="col-lg-10 offset-lg-2">
              <div class="col-md-10">
                <% if (typeof message != "undefined") { %>
                  <div class="alert alert-<%= message.type %>">
                    <%= message.text %> 
                </div>
                <% } %>
              </div>
             

                <!-- Blog post-->
                <form action="" method="POST">

                    <div class="row">
                        <div class="col-md-5">
                            <div class="mb-3">
                                <label for="firstName" class="form-label">Firstname</label>
                                <input type="text" class="form-control" id="firstName" name="firstName">
                            </div>
                        </div>
                        <div class="col-md-5">
                            <div class="mb-3">
                                <label for="lastName" class="form-label">Lastname</label>
                                <input type="text" class="form-control" id="lastName" name="lastName">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-5">
                            <div class="mb-3">
                                <label for="firstName" class="form-label">Email</label>
                                <input type="email" class="form-control" id="email" name="email">
                            </div>
                        </div>
                        <div class="col-md-5">
                            <div class="mb-3">
                                <label for="password" class="form-label">Password</label>
                                <input type="password" class="form-control" id="password" name="password">
                            </div>
                        </div>
                    </div>
                    
                    <div class="mb-3 form-check">
                      <input type="checkbox" class="form-check-input" name="approved" id="approved">
                      <label class="form-check-label" for="approved">Check me out</label>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                  </form>
            </div>
          </div>
          <!-- Pagination-->
        </div>
      </div>
    </div>
    <!-- Footer-->
    <%- include('../_partials/user/footer') %>
  </body>
</html>
